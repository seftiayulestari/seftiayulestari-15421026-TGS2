<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.seftiproject.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Nama"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/isiNama"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Tulis Namamu"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan NPM"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/isiNPM"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Input Npmmu"
            android:inputType="textNoSuggestions"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan tanggal lahir"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/isiTtl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="input Tanggal Lahir"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Agama"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/isiAgama"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="sebutkan Agamam"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textColor="@color/colorAccent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Fakultas"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/isiFakultas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apa Fakultasmu"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textColor="@color/colorAccent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Prodi"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/isiProdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apa Prodimu"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textColor="@color/colorAccent" />


        <Button
            android:id="@+id/btndata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="Kirim Data"
            android:textColor="@android:color/background_light" />


    </LinearLayout>

</RelativeLayout>




